{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Customer orders"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "stripePaymentIntentId": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "customerEmail": {
      "type": "email",
      "required": true
    },
    "customerName": {
      "type": "string",
      "required": true
    },
    "customerPhone": {
      "type": "string"
    },
    "supabaseUserId": {
      "type": "string"
    },
    "items": {
      "type": "json",
      "required": true
    },
    "subtotal": {
      "type": "integer",
      "required": true
    },
    "total": {
      "type": "integer",
      "required": true
    },
    "currency": {
      "type": "string",
      "default": "cad"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "paid", "processing", "shipped", "delivered", "cancelled", "refunded"],
      "default": "pending",
      "required": true
    },
    "designReady": {
      "type": "boolean",
      "default": true
    },
    "notes": {
      "type": "text"
    }
  }
}
