{
  "kind": "collectionType",
  "collectionName": "contact_submissions",
  "info": {
    "singularName": "contact-submission",
    "pluralName": "contact-submissions",
    "displayName": "Contact Submission",
    "description": "Contact form submissions"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "nom": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "telephone": {
      "type": "string"
    },
    "entreprise": {
      "type": "string"
    },
    "service": {
      "type": "string"
    },
    "budget": {
      "type": "string"
    },
    "urgence": {
      "type": "string"
    },
    "message": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["new", "read", "replied", "archived"],
      "default": "new",
      "required": true
    },
    "notes": {
      "type": "text"
    }
  }
}
